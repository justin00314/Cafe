<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="10dp">

    <ImageView
        android:id="@+id/editor_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:src="@mipmap/type_participated"
        tools:ignore="ContentDescription" />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/editor_layout"
        style="@style/BaseTextInputLayout"
        android:layout_toEndOf="@id/editor_icon"
        android:layout_marginStart="@dimen/text_horizontal_margin">

        <EditText
            style="@style/BaseEdit"
            android:id="@+id/editor_content"
            android:labelFor="@id/editor_content"/>

    </android.support.design.widget.TextInputLayout>

