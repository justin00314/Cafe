<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/coordinator_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/aiview_activity_bg"
            android:orientation="vertical"
            android:paddingStart="26dp"
            android:paddingEnd="4dp"
            android:paddingTop="@dimen/activity_vertical_margin">

            <include
                android:id="@+id/theme"
                layout="@layout/include_icon_title_editor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/meeting_item_vertical_margin" />

            <include
                android:id="@+id/number"
                layout="@layout/include_icon_title_editor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/meeting_item_vertical_margin" />

         <!--   <include
                android:id="@+id/organizer"
                layout="@layout/include_icon_title_spinner_organizer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/meeting_item_vertical_margin" />-->

            <include
                android:id="@+id/place"
                layout="@layout/include_icon_title_spinner_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/meeting_item_vertical_margin" />

            <include
                android:id="@+id/start_date"
                layout="@layout/include_icon_title_imagebutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/meeting_item_vertical_margin" />

            <include
                android:id="@+id/finish_date"
                layout="@layout/include_icon_title_imagebutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/meeting_item_vertical_margin" />


        </LinearLayout>
    </ScrollView>

    <com.rey.material.widget.Button
        style="@style/BaseButton"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:onClick="submit"
        android:text="@string/submit"
        app:rd_enable="true" />
</LinearLayout>


