<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bottom_layer_bg"
    android:gravity="center_horizontal">

    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edit_container"
        android:layout_alignLeft="@+id/edit_container"
        android:layout_alignRight="@+id/edit_container"
        android:layout_alignTop="@+id/edit_container"
        android:layout_marginBottom="-50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="-10dp"
        android:layout_marginTop="40dp"
        android:background="@mipmap/bottom_layer_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:onClick="registe"
            android:text="@string/register"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <com.dd.ShadowLayout
        android:id="@+id/edit_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="50dp"
        android:background="@android:color/black"
        app:sl_cornerRadius="3dp"
        app:sl_dx="5dp"
        app:sl_dy="5dp"
        app:sl_shadowColor="@color/shadow"
        app:sl_shadowRadius="10dp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/log"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="10dp">

            <include
                android:id="@+id/user_name"
                layout="@layout/include_title_icon_editor" />

            <include layout="@layout/include_edit_separator" />

            <include
                android:id="@+id/user_id"
                layout="@layout/include_title_icon_editor" />

            <include layout="@layout/include_edit_separator" />

            <include
                android:id="@+id/user_password"
                layout="@layout/include_title_icon_editor" />

            <include layout="@layout/include_edit_separator" />

            <include
                android:id="@+id/user_repassword"
                layout="@layout/include_title_icon_editor" />
        </LinearLayout>
    </com.dd.ShadowLayout>
</RelativeLayout>
