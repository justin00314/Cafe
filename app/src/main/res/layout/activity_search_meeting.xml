<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search_meeting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aiview_activity_bg"
    android:paddingLeft="32dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ai2020lab.cafe.activity.SearchMeetingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@mipmap/type_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/id"
                    style="@style/TextLittle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/glass"
                    android:text="id" />

                <EditText
                    android:id="@+id/editor_id"
                    style="@style/BaseEdit"
                    android:layout_below="@id/id"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@+id/glass"
                    android:text="112431243" />

                <ImageView
                    android:id="@+id/glass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/reading_glass" />

            </RelativeLayout>

            <View
                android:id="@+id/seperator"
                style="@style/SeperatorLine"
                android:layout_marginTop="10dp" />

            <TextView
                style="@style/TextLittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/result" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
