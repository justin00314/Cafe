<resources>

	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

	<!-- 自定义对话框窗口样式 -->
	<style name="BaseDialog" parent="android:style/Theme.Dialog">
		<item name="android:windowNoTitle">true</item>
		<!-- 窗口无标题 -->
		<item name="android:windowFrame">@null</item>
		<!-- 边框 -->
		<item name="android:windowIsFloating">true</item>
		<!-- 是否浮现在activity之上 -->
		<item name="android:windowIsTranslucent">false</item>
		<!-- 半透明 -->
		<item name="android:windowBackground">@color/aiview_dialog_window_bg</item>
		<!-- 背景模糊 -->
		<item name="android:backgroundDimEnabled">true</item>
		<!-- 背景模糊度 -->
		<item name="android:backgroundDimAmount">0.6</item>

	</style>

	<!--窗口动画样式，这只是一个例子，底部滑入滑出-->
	<style name="windowAnimSlideBottom">
		<!--窗口动画-->
		<item name="android:windowEnterAnimation">@anim/slide_bottom_in</item>
		<item name="android:windowExitAnimation">@anim/slide_bottom_out</item>
	</style>

	<!--这里定义字体样式，根据不同的项目自行配置-->
	<!--大号字体-->
	<style name="TextLarge" parent="TextAppearance.AppCompat.Title">
		<item name="android:textColor">@color/aiview_text_normal</item>
	</style>
	<!--中号字体-->
	<style name="TextNormal" parent="TextAppearance.AppCompat.Subhead">
		<item name="android:textColor">@color/aiview_text_normal</item>
	</style>
	<!--中号字体,浅色-->
	<style name="TextNormal.Light" parent="TextNormal">
		<item name="android:textColor">@color/aiview_text_light</item>
	</style>
	<!--小号字体-->
	<style name="TextLittle" parent="TextAppearance.AppCompat.Body2">
		<item name="android:textColor">@color/aiview_text_normal</item>
	</style>
	<!--小号字体,浅色-->
	<style name="TextLittle.Light" parent="TextLittle">
		<item name="android:textColor">@color/aiview_text_light</item>
	</style>


	<!--自定义警告对话框窗口样式-->
	<style name="BaseAlertDialog" parent="BaseDialog">
		<item name="android:windowIsTranslucent">true</item>
	</style>
	<!--对话框窗口动画,缩放方式-->
	<style name="windowAnimScale">
		<!--窗口动画-->
		<item name="android:windowEnterAnimation">@anim/scale_alpha_in</item>
		<item name="android:windowExitAnimation">@anim/scale_alpha_out</item>
	</style>



</resources>